<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Fellow</title>
    <link rel="icon" href="../images/logo-icon.png" type="image/x-icon"/>
    <%- include("cdn/style") -%>
    <!-- <link rel="stylesheet" href="../css/styles.css"  > -->
    <style>
    .container{
        border-radius: 10px;
        background-color: #0811202d;
        text-align:center;
        margin: auto;
        padding-bottom: 10px;
        width:350px;
    }
    body{
        background-color: #faf4f4;
        overflow-x: hidden;
        padding-top:70px;
    }
    h1{
        margin:auto;
    }
    .main{
        margin-top: 30px;
    }
    .row{
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
        height:90px;
        width:350px;
        background-color:#D03737 ;
        color: #fff;
        font-family:Verdana, Geneva, Tahoma, sans-serif;
    }
    .btn-login{
        background-color: #D03737;
        color: #fff;
        margin-top: -10px;
    }
    .forget{
        margin-top: 20px;
    }
    .alert{
        margin-top: -20px;
    }
    .footer{
    text-align: center;
    font-weight: 600;
    padding: 5px 0px;
    opacity: 0.7;
   }
    </style>
    
</head>
<body>
<div class="container justify-content-center">
	    <div class="row" >
		   <h1><i class="fa fa-lock" aria-hidden="true"></i> Login</h1>
        </div>
        
         <form class="main" action="/users/login" method="POST">
            <%- include('partials/messages'); -%>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user-circle-o icon"></i></span>
                </div>
                <input type="email" name="collegeEmail" class="form-control" placeholder="College Registered Email*"/>
            </div><br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key "></i></span>
                </div>
                    <input type="Password" name="password" class="form-control" placeholder="Password*"/>
           </div><br />
          <div class="checkbox">
                <label><input type="checkbox" id="checkbox" name="checkbox" /> Remember me</label>
          </div><br />
                <button type="submit" class="btn btn-login"><span class="glyphicon glyphicon-off"></span> Login</button>
          </form>
          <div class="forget">
                  <p>Don't have an Account! <a href="./register">Register Here</a></p>
                  <p>Forgot <a data-toggle="modal" data-target="#resetPassword-modal"  style="color: rgb(89, 154, 230);">Password?</a></p>
          </div>
 </div>          
 
    <!--Reset Passsword Modal -->
<div class="modal" tabindex="-1" id="resetPassword-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Sent Temporary Password on Registered Email.</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/users/resetPass" method="post">
            <input type="email" name="collegeEmail" class="form-control" placeholder="Enter your Registered email." required/>
            <button class="btn btn-primary text-center" style="margin: 10px auto;">Send Email</button>
          </form>
        </div>
      </div>
    </div>
  </div>

    <footer class="fixed-bottom footer">© 2020 COLLEGE FELLOW</footer>

    <%- include("cdn/script") -%>
    <script>
      $('#checkbox').on('change', function(){
        if(this.checked) {
          this.value="remember";
    } else {
        this.value="notRemember";
    }
      });
    </script>
</body>
</html>    